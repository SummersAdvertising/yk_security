<!doctype html>
<html>
<head>
<!--[if lt IE 9]>
<script src="js/html5.js"></script>
<link rel="stylesheet" href="css/desktop.css">
<![endif]-->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
<meta name="Robots" content="index,follow"/>
<meta http-equiv="content-language" content="zh-TW" />
<title>誼光保全後台管理系統</title>
	<link rel="stylesheet" href="/css/reset.css">
	<link rel="stylesheet" href="/css/default.css">
  <link rel="stylesheet" href="/css/login.css">
	<link rel="stylesheet" href="/css/alertify.css" />
	<link rel="stylesheet" href="/css/alertify.default.css"/>
  <%= csrf_meta_tags %>  
  <%= javascript_include_tag 'application' %>    
  <script>
	  <% if !flash[:notice].nil? %>
	  window.onload= function() { alertify['success']('<%= flash[:notice] %>', 3000); }
	  <% end %>
	  
	  <% if !flash[:warning].nil? %>
	  window.onload= function() { alertify['error']("<%= flash[:warning].html_safe %>", 3000); }
	  <% end %>
  </script>
</head>
<body>
  <div class="login">
    <h1><img src="/images/h1-admin.png"></h1>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th align="center"><%= f.label :email, '帳號' %></th>
        <td><%= f.email_field :email, :autofocus => true %></td>
      </tr>
      <tr>
        <th align="center"><%= f.label :email, '密碼' %></th>
        <td><%= f.password_field :password %></td>
      </tr>
    </table>
    <a href="javascript: document.forms[0].submit();">登入</a>
    <% end %>
  </div>
</body>
</html>

