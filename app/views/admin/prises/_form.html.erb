<%= form_for([:admin, @prise], :html => { :multipart => true }) do |f| %>

<section class="title">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th><%= f.label :title %></th>
      <td><%= f.text_field :title, :placeholder => "請輸入表揚標題" %></td>
    </tr>
  </table>
</section>
<!--title-->

<section class="title">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th><%= f.label :month %></th>
      <td><%= f.datetime_select :month, :discard_day => true, :discard_hour => true, :discard_minute => true %></td>
    </tr>
  </table>
</section>
<!--title-->

<%= fields_for @honoree do | h | %>
	<section class="text text-edit">
	  <div class="three">
	    <table width="100%" border="0" cellspacing="0" cellpadding="0">
	      <tr>
	        <th valign="top"><%= h.label :cover, '照片：' %></th>
	        <td><%= h.file_field :cover %></td>
	      </tr>
	    </table>
	  </div>
	  <div class="three">
	    <table width="100%" border="0" cellspacing="0" cellpadding="0">
	      <tr>
	        <th valign="top"><%= h.label :area, '地區：' %></th>
	        <td><%= h.text_field :area %></td>
	      </tr>
	    </table>
	  </div>
	  <div class="three">
	    <table width="100%" border="0" cellspacing="0" cellpadding="0">
	      <tr>
	        <th valign="top"><%= h.label :name, '姓名：' %></th>
	        <td><%= h.text_field :name %></td>
	      </tr>
	    </table>
	  </div>
	  <div class="one">
	    <table width="100%" border="0" cellspacing="0" cellpadding="0">
	      <tr>
	        <th valign="top"><%= h.label :name, '內文：' %></th>
	        <td><%= h.text_area :content %></td>
	      </tr>
	    </table>
	  </div>
	</section>
<% end %>
<section class="button"> <a href="javascript: document.forms[0].submit();"><img src="<%= image_path("check.png") %>">送出</a> </section>
<!--button-->

<% end %>
