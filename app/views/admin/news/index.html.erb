<section class="button"><%= link_to image_tag('add.png') + '新增文章' , admin_news_index_path, :method => :post %>  </section>
<!--button-->
<section class="list">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th align="left" class="x0 x2">日期</th>
      <th align="left">標題</th>
      <th align="left" class="x0 x1">編輯</th>
      <th align="left" class="x1">刪除</th>
    </tr>
    
    <% @news.each do |news| %>
    <tr>
      <td class="x0">2013-03-05</td>
      <td><%= link_to news.title, admin_news_path(news) %></td>
      <td class="x0"><a href="<%=  edit_admin_news_path(news) %>"><img src="<%= image_path("edit.png") %>"></a></td>
      <td><%= link_to  image_tag('delete.png'), admin_news_path(news), method: :delete, data: { confirm: 'Are you sure?' }  %></td>
    </tr>
    <% end %>
  </table>
</section>
<!--list-->
<section class="page">
<%= paginate @news %>
</section>
<!--page-->
